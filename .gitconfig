[user]
    name = Ory Band
    email = oryband@gmail.com
[push]
    default = simple
[credential]
    helper = cache --timeout=3600
[apply]
    whitespace = fix
[core]
    editor = vim
    whitespace = space-before-tab,trailing-space,blank-at-eol,cr-at-eol,blank-at-eof
	excludesfile = ~/.gitignore
	pager = less -x1,5
[color]
    ui = true
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[diff]
    renames = true
[merge]
    log = true
[rebase]
    autosquash = true
    autostash = true
    missingCommitsCheck = warn
[alias]
    a = add
    ps = push
    pl = pull
    f = fetch
    rs = reset
    c = commit --verbose

    l = log --oneline --graph
    ll = log --graph
    lt = log --graph --abbrev-commit --decorate --date=relative --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'

    # line diff highlight
    d  = !"git diff-index --quiet HEAD -- || clear; git diff --irreversible-delete --patch-with-stat"
    ds = !"git diff-index --quiet HEAD -- || clear; git diff --irreversible-delete --patch-with-stat --staged "

    # char diff highlight
    dc  = !"git diff-index --quiet HEAD -- || clear; git diff --irreversible-delete --patch-with-stat --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'"
    dcs = !"git diff-index --quiet HEAD -- || clear; git diff --irreversible-delete --patch-with-stat --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+' --staged "

    sh = show --irreversible-delete --patch-with-stat
    shc = show --irreversible-delete --patch-with-stat --color-words='[^[:space:]]|([[:alnum:]]|UTF_8_GUARD)+'

    co = checkout
    cb = checkout -b

    b = branch
    bd = branch --delete
    bdf = branch -D
    br = branch --remote
    bdr = !"git-delete-branch $@"
    bdm = !"git-delete-merged-branches"

    st = stash
    sl = stash list
    sp = stash pop

    tags = tag --list
    prune = remote update origin --prune
    undopush = push --force origin HEAD^:master
