#!/bin/sh
set -e

i3-kill Google-chrome
i3-msg "exec $(which google-chrome-stable)"

i3-kill Slack
i3-msg "exec $(which slack)"

DPI="$(grep Xft.dpi ~/.Xresources | awk '{print $2}')"

if [ "$DPI" == 96 ]; then SCALE_FACTOR="1.0"; fi;
if [ "$DPI" == 240 ]; then SCALE_FACTOR="2.5"; fi;
i3-kill Spotify 
i3-msg "exec $(which spotify) --force-device-scale-factor=$SCALE_FACTOR"

pkill --signal TERM -f dunst
