Xft.dpi: 240

URxvt*termName:             rxvt-unicode-256color

URxvt*geometry:             80x20

URxvt*loginShell:           true

URxvt*scrollBar:            false
URxvt*scrollTtyOutput:      false
URxvt*scrollTtyKeypress:    true
URxvt*scrollWithBuffer:     true

Xft*antialias:              true
Xft*hinting:                true
Xft*hintstyle:              hintfull

URxvt*font:                 xft:SauceCodePro Nerd Font Mono:size=13:Light
URxvt*boldFont:             xft:SauceCodePro Nerd Font Mono:size=13:Regular
URxvt*italicFont:           xft:SauceCodePro Nerd Font Mono:size=13:Bold
URxvt*boldItalicFont:       xft:SauceCodePro Nerd Font Mono:size=13:Bold:Italic

URxvt*intensityStyles:      false

URxvt*pointerBlank:         true

URxvt.perl-ext-common:      font-size

URxvt.keysym.C-equal:       font-size:increase
URxvt.keysym.C-0x2d:        font-size:decrease
! URxvt.keysym.C-S-Up:        font-size:incglobal
! URxvt.keysym.C-S-Down:      font-size:decglobal

! URxvt.perl-ext: bidi
! URxvt.bidi.enabled: 0

rofi.width: 50
rofi.lines: 5
rofi.font: SauceCodePro Nerd Font Mono Light 18
rofi.hlbg: base02
rofi.bc: base09
rofi.bw: 3
rofi.loc: 0
rofi.fixed-num-lines: true
rofi.terminal: x-terminal-emulator

